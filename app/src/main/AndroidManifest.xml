<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:name=".test.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- MainActivity 是启动活动 -->
        <activity
            android:name=".MainActivity"

            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 注册 SecondActivity -->
        <activity
            android:name=".com.myapplication.myapplication.activity.SecondActivity"
            android:exported="true"
            android:label="Second Activity" />

        <!-- 注册 MenuActivity -->
        <activity
            android:name=".com.myapplication.myapplication.activity.MenuActivity"
            android:exported="true"
            android:label="Menu Activity" />

        <!-- 注册 CenterActivity -->
        <activity
            android:name=".com.myapplication.myapplication.activity.CenterActivity"
            android:exported="true"
            android:label="Center Activity" />

        <!-- 注册 MessageActivity -->
        <activity
            android:name=".com.myapplication.myapplication.activity.MessageActivity"
            android:exported="true"
            android:label="Message Activity" />

    </application>

</manifest>